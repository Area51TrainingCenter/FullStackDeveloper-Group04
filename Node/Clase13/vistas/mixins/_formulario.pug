mixin formulario(titulo, reg = {})
	h1= titulo
	form(method="post",action=`/multicines/${reg._id || ''}`,enctype="application/x-www-form-urlencoded")
		if reg._id
			input(type="hidden",name="_method",value="PUT")
		div.input-field
			label(for="nombre") Nombre
			input(type="text",placeholder="Ingrese el nombre",name="nombre",id="nombre",value=reg.nombre)
		div.input-field
			label(for="descripcion") Descripción
			textarea.materialize-textarea(placeholder="Ingrese la descripción",name="descripcion",id="descripcion")= reg.descripcion
		div.input-field
			label(for="numeroSalas") Número salas
			input(type="number",placeholder="Ingrese el número de salas",name="numeroSalas",id="numeroSalas",value=reg.numeroSalas)
		div
			- const caracteristicas = ["2D", "3D", "DBOX", "XTREME"]
			- const lista = reg.caracteristicas || []
			each caracteristica in caracteristicas
				p
					label
						input(type="checkbox",name="caracteristicas",value=caracteristica,checked=lista.includes(caracteristica))
						span #{caracteristica}
		div.input-field
			button(type="submit").btn.teal.waves-effect.waves-light= titulo